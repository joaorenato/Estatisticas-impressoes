#library(ggplot2)
df = Info_Departamento
dfm <- melt(df[,c('Departamento','media_pb','media_cor')],id.vars = 1)

ggplot(dfm,aes(x = Departamento,y = value)) + 
    geom_bar(aes(fill = variable),stat = "identity",position = "dodge") + 
    scale_y_log10()
